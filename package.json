{
  "name": "paleontology",
  "private": true,
  "scripts": {
    "build": "next build",
    "start": "next start",
    "lint": "next lint",
    "prettier": "prettier --ignore-path .gitignore --write \"**/*.+(js|json|ts|tsx)\"",
    "format": "yarn prettier --write",
    "format:check": "yarn prettier --list-different",
    "type:check": "tsc --project tsconfig.json --pretty --noEmit",
    "docker:start": "docker-compose up",
    "docker:restart": "docker-compose restart",
    "docker:build": "docker-compose up -d",
    "pre-commit": "npm-run-all --parallel type:check && lint-staged",
    "prepare": "husky install",
    "husky:pre-commit": "npx husky add .husky/pre-commit 'yarn pre-commit'"
  },
  "dependencies": {
    "@headlessui/react": "^1.4.2",
    "@heroicons/react": "^1.0.5",
    "@supabase/supabase-js": "^1.29.0",
    "@tailwindcss/aspect-ratio": "^0.4.0",
    "@tailwindcss/forms": "^0.4.0",
    "next": "^12.0.7",
    "react": "17.0.2",
    "react-dom": "17.0.2",
    "react-hook-form": "^7.22.5",
    "react-icons": "^4.3.1",
    "swr": "^1.1.2"
  },
  "devDependencies": {
    "@types/node": "17.0.2",
    "@types/react": "17.0.37",
    "autoprefixer": "^10.4.0",
    "eslint": "8.5.0",
    "eslint-config-next": "12.0.7",
    "eslint-plugin-simple-import-sort": "^7.0.0",
    "eslint-plugin-unused-imports": "^2.0.0",
    "express": "^4.17.2",
    "husky": "^7.0.0",
    "lint-staged": "^12.1.5",
    "npm-run-all": "^4.1.5",
    "postcss": "^8.4.5",
    "prettier": "^2.5.1",
    "tailwindcss": "^3.0.7",
    "typescript": "4.5.4"
  },
  "lint-staged": {
    "*.{js,ts,tsx}": [
      "eslint --max-warnings=0 --fix --ignore-path .gitignore"
    ],
    "*.{js,json,ts,tsx}": [
      "yarn format"
    ]
  }
}
